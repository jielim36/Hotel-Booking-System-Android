<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Tenant.TenantMainPage_Part.CheckoutActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/app_primary_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"

        >
        <ImageButton
            android:id="@+id/checkout_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/white"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

            <TextView
                android:id="@+id/checkout_instructions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View check-out instructions"
                android:padding="0dp"
                android:layout_marginTop="10dp"
                />

            <ImageButton
                android:id="@+id/checkout_instructions_dropDown_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_arrow_drop_down_24"
                />

            <TextView
                android:id="@+id/checkout_instructions_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hotel_checkout_instruction_content"
                android:background="#29bfbfbf"
                android:paddingHorizontal="25dp"
                android:paddingVertical="10dp"
                style="@style/small_text"
                android:gravity="center"
                android:visibility="gone"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Room No"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/checkout_roomNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/checkout_customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/checkout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM1000"
                android:layout_weight="1"
                />
            <ImageButton
                android:id="@+id/checkout_amount_details_dropDown_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:background="@drawable/baseline_notes_24"
                />

        </LinearLayout>

        <Button
            android:id="@+id/checkout_confirm_btn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:text="Confirm"
            style="@style/big_text"
            android:layout_marginTop="80dp"
            />

    </LinearLayout>
    </ScrollView>
</LinearLayout>