<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.Tenant.Home_Part.TenantMainFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/tenant_main_page_background"
        android:layout_width="700dp"
        android:layout_height="300dp"
        android:background="@drawable/semi_circle_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="-100dp"
        />

    <TextView
        android:id="@+id/tenant_main_page_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! Jielim36"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="34dp"
        android:letterSpacing="0.05"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/tenant_main_page_selection_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:paddingHorizontal="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                android:id="@+id/tenant_checkout_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Check-out"
                android:textColor="@color/white"
                android:background="@drawable/btn_square_shape"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                style="@style/big_text"
                />

            <Button
                android:id="@+id/tenant_extendStay_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                style="@style/big_text"
                android:text="Extend Stay"
                android:textColor="@color/white"
                android:background="@drawable/btn_square_shape"
                android:textAllCaps="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"

            >
            <Button
                android:id="@+id/tenant_feedback_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Feedback"
                android:textColor="@color/white"
                android:background="@drawable/btn_square_shape"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                style="@style/big_text"
                />

            <Button
                android:id="@+id/tenant_roomDetails_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Room Details"
                android:textColor="@color/white"
                android:background="@drawable/btn_square_shape"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                style="@style/big_text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/tenant_orderFood_btn"
                android:text="Order Food"
                android:layout_width="150dp"
                android:layout_height="150dp"
                style="@style/big_text"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_square_shape"
                android:textAllCaps="false"
                android:contentDescription="Order Food"
                />

            <Button
                android:id="@+id/tenant_callService_btn"
                android:text="Call Service"
                android:layout_width="150dp"
                android:layout_height="150dp"
                style="@style/big_text"
                android:textColor="@color/white"
                android:background="@drawable/btn_square_shape"
                android:textAllCaps="false"
                android:contentDescription="Order Food"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>