<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Tenant.TenantMainPage_Part.CallServiceActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/app_primary_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginBottom="50dp"
        >
        <ImageButton
            android:id="@+id/callService_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/white"
            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Contact Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/contact_instagram"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_instagram"
                android:layout_marginBottom="5dp"
                android:contentDescription="InstagramMe"
                android:clickable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/contact_whatsapp"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_whatsapp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="5dp"
                android:contentDescription="WhatsappMe"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whatsapp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/contact_phone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_phone"
                android:layout_marginBottom="5dp"
                android:contentDescription="CallMe"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call me"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Specific Service"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:layout_marginBottom="10dp"
        >

        <!-- Service 1 Logo (You can replace the ImageView with your logo) -->
        <ImageView
            android:id="@+id/service01_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_phone"
            android:contentDescription="CallMe"
            android:clickable="true"
            android:layout_marginRight="14dp"
            />

        <!-- Service 1 Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butler Service in Suites"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Service 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:layout_marginBottom="10dp"
        >

        <!-- Service 2 Logo -->
        <ImageView
            android:id="@+id/service02_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_phone"
            android:contentDescription="CallMe"
            android:clickable="true"
            android:layout_marginRight="14dp"
            />

        <!-- Service 2 Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complimentary Shoeshine Service"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Service 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:layout_marginBottom="10dp"
        >

        <!-- Service 3 Logo -->
        <ImageView
            android:id="@+id/service03_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_phone"
            android:contentDescription="CallMe"
            android:clickable="true"
            android:layout_marginRight="14dp"
            />

        <!-- Service 3 Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Express Check-in and Check-out Services"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Service 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:layout_marginBottom="10dp"
        >

        <!-- Service 4 Logo -->
        <ImageView
            android:id="@+id/service04_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_phone"
            android:contentDescription="CallMe"
            android:clickable="true"
            android:layout_marginRight="14dp"
            />

        <!-- Service 4 Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laundry &amp; Valet Service"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>