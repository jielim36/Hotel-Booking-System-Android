<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/AppTheme_color"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Adding Room"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <!--  Title  -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Step 1: Adding Information"
            android:textSize="24sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:paddingLeft="45dp"
        android:paddingRight="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Room No: "
                android:layout_gravity="center_vertical"
                >

            </TextView>
            <EditText
                android:id="@+id/step1_room_no"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:inputType="number|numberSigned"
                android:maxLength="3"
                android:hint="Enter Room Number"
                android:textSize="18sp"
                >

            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Price/day: "
                android:layout_gravity="center_vertical"
                >

            </TextView>
            <EditText
                android:id="@+id/step1_price"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="3"
                android:hint="Enter Price/day"
                android:textSize="18sp"
                >

            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Type:"
                android:layout_gravity="center_vertical"
                >

            </TextView>
            <Spinner
                android:id="@+id/step1_type"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:inputType=""
                android:maxLength="10"
                android:hint="Enter Room Type"
                android:textSize="18sp"
                >

            </Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Floor No: "
                android:layout_gravity="center_vertical"
                >

            </TextView>
            <EditText
                android:id="@+id/step1_floor_no"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:inputType="number|numberSigned"
                android:maxLength="1"
                android:hint="Enter Floor Number"
                android:textSize="18sp"



                >

            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Max people: "
                android:layout_gravity="center_vertical"
                >

            </TextView>
            <EditText
                android:id="@+id/step1_max_people"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:inputType="number|numberSigned"
                android:maxLength="2"
                android:hint="Enter max people"
                android:textSize="18sp">
            </EditText>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/body"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Back"
            android:textStyle="bold"
            android:textSize="18sp"
            >

        </Button>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:text="Next"
            android:textStyle="bold"
            android:textSize="18sp"
            >


        </Button>

    </RelativeLayout>

</RelativeLayout>


